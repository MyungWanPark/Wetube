doctype html 
html(lang="ko")
    head 
        title #{headTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
              h1=headTitle 
              nav 
                  ul 
                    
                    li
                        a(href="/") home
                    li
                        a(href="/search") search
                    if loggedIn
                        li 
                            a(href="/user/logout") log out
                        li 
                            a(href="/user/edit") edit profile
                        li
                            a(href="/video/upload") upload video
                    else
                        li
                            a(href="/join") join
                        li
                            a(href="/login") login
        main 
            block content
    include partial/footer